{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": ["dom", "es2015", "es2017"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    ".serverless",
    ".webpack"
  ]
}
