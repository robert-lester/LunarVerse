{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "removeComments": false,
    "typeRoots": ["node_modules/@types/", "src/@types/"],
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "outDir": "build/dist"
  },
  "exclude": ["node_modules/**", ".serverless", ".webpack"]
}
